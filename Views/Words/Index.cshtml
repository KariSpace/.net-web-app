@model IEnumerable<DictionaryWebApp.Models.Word>

@{
    ViewData["Title"] = "Index";
}

<h1>Dictionary</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WordText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordMeaning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordTranslate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordUsageExample)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WordText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordMeaning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordTranslate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WordUsageExample)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
